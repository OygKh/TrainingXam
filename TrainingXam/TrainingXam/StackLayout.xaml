<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingXam.StackLayout">
    <Grid RowSpacing="50" ColumnSpacing="50">
        <Grid.RowDefinitions >
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Text="Column 0, Row 0" WidthRequest="200" Background="Red"/>
        <Label Text="Column 1, Row 0" WidthRequest="200" Grid.Column="1" Background="Blue"/>
        <Label Text="Column 0, Row 1" WidthRequest="200" Grid.Row="1" Background="Green"/>
        <Label Text="Column 1, Row 1" WidthRequest="200" Grid.Row="1" Grid.Column="1" Background="Yellow"/>
    </Grid>
    
</ContentPage>